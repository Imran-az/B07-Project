<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".annualCarbonTracker.ResultsActivity">



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="20dp"
      android:clipChildren="false"
      android:clipToPadding="false">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annual Carbon Footprint Results"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBreakdown"
        android:onClick="expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:contentPadding="16dp">

      <LinearLayout
          android:id="@+id/layoutfootprintContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click for Breakdown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Container for dynamic content -->
        <LinearLayout
            android:id="@+id/breakdownContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="8dp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Contribution Info -->
    <TextView
        android:id="@+id/contributionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have contributed to a total of X tons of CO2e per year based on your results."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="28dp" />

    <!-- Shared Legend -->
    <GridLayout
        android:id="@+id/sharedLegendContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:columnCount="2"
        android:padding="16dp">
    </GridLayout>


    <!-- Pie Chart with Rounded Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:contentPadding="16dp">

      <!-- Vertical Layout for Title and Chart -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <!-- Pie Chart Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pie Chart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" /> <!-- Spacing added here -->

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="280dp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Bar Chart with Rounded Container -->
    <!-- Bar Chart with Rounded Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:contentPadding="16dp">

      <!-- Vertical Layout for Title and Chart -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <!-- Bar Chart Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar Chart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" /> <!-- Ensure spacing here -->

        <!-- Bar Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Comparison Text -->
    <TextView
        android:id="@+id/comparisonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comparison with Global Averages"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007AFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />
  </LinearLayout>
</ScrollView>



